<div class="row">
  <div class="col-xs-12">
      <div class="box">

        <div class="box-header">
          <h3 class="box-title">顧客一覧</h3>
        </div>

        <div class="box-body">
          <div id="user_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">

            <div class="row">
              <div class="col-sm-12">
                <table id="user_index" class="table table-bordered table-striped dataTable" role="grid">
                  <thead>
                    <tr>
                      <th>顧客コード</th>
                      <th>略省</th>
                      <th>顧客名称</th>
                      <th>電話番号</th>
                      <th>FAX番号</th>
                      <th class="col-xs-1">Actions</th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @customers.each do |customer| %>
                      <tr>
                        <td> <%= customer.code %> </td>
                        <td> <%= customer.ryaku %> </td>
                        <td> <%= customer.name %> </td>
                        <td> <%= customer.telnum %> </td>
                        <td> <%= customer.faxnum %> </td>
                        <td>
                          <div class="btn-row">
                            <%= link_to raw('<i class="fa fa-cogs"></i>'), edit_admin_customer_url(customer), class: 'btn btn-sm btn-warning' %>
                            <%= link_to raw('<i class="fa fa-trash"></i>'), admin_customer_url(customer), class: 'btn btn-sm btn-danger', method: :delete,
                                            data: { confirm: '本当に削除しますか？' } %>
                          </div>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>

                  <tfoot>
                    <tr role="row">
                      <th>顧客コード</th>
                      <th>略省</th>
                      <th>顧客名称</th>
                      <th>電話番号</th>
                      <th>FAX番号</th>
                      <th class="col-xs-1">Actions</th>
                    </tr>
                  </tfoot>
                </table>
              </div>
            </div>

          </div>
        </div>

    </div>
  </div>
</div>
